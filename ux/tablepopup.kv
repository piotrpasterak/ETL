#: kivy 1.0
#: import TableView etl.TableView

Popup:
    title: "Database content"
    auto_dismiss: False
    on_open: dropdown.create_hotels_list()
    BoxLayout:
        orientation: "vertical"
        # trick to not lost the Dropdown instance
        # Dropdown itself is not really made to be used in kv.
        __safe_id: [dropdown.__self__]

        Button:
            id: btn
            text: 'Hotels list'
            on_release: dropdown.open(self)
            size_hint: (.2,.1)
            pos_hint: {'x': .4}

        HotelsDropDown:
            id: dropdown
            on_select:tableview.get_data()
            on_select:tableview.set_hotel_name(args[1])

        Button:
            text: "Delete All"
            #orientation: 'vertical'
            size_hint: (.2,.1)
            pos_hint: {'x': .4}
            on_release: tableview.delete_all_reviews()

        Button:
            text: "Close"
            #orientation: 'vertical'
            size_hint: (.2,.1)
            pos_hint: {'x': .4}
            on_release: root.dismiss()
        Button:
            text: "Export to CSV"
            #orientation: 'vertical'
            size_hint: (.2,.1)
            pos_hint: {'x': .4}
            on_release: tableview.csv_export()
        BoxLayout:
            size_hint: (.4,.1)
            pos_hint: {'x': .4}
            orientation: "horizontal"
            Button:
                text: "Export to CSV by ID"
                on_release: tableview.csv_export_by_id(id_input.text)
            TextInput:
                id: id_input
                multiline: False
                input_filter: 'int'
        BoxLayout:
            #size_hint: (.0,.1)
            pos_hint: {'x': .0}
            size_hint_y : .1
            orientation: "vertical"
            Label:
                id: nolabel
                pos_hint: {'x': .0}
                text: 'Number of reviews:' + tableview.row_number
            Label:
                id: hotel_info
                pos_hint: {'x': .0}
                text: 'Hotel:' + tableview.hotel_full_data
        TabbedPanel:
            do_default_tab: False
            TabbedPanelItem:
                text: 'Data'
                TableView:
                    id: tableview
                    BoxLayout:
                        orientation: "vertical"
                        GridLayout:
                            size_hint: 1, None
                            size_hint_y: None
                            height: 25
                            cols: 11

                            Label:
                                text: "ID"
                                width: 10
                            Label:
                                text: "Name"
                            Label:
                                text: "Date"
                            Label:
                                text: "Header"
                            Label:
                                text: "Country"
                            Label:
                                text: "User age group"
                            Label:
                                text: "Review count"
                            Label:
                                text: "Score"
                            Label:
                                text: "Info Tags"
                            Label:
                                text: "Positive review"
                            Label:
                                text: "Negative review"
                        BoxLayout:
                            RecycleView:
                                viewclass: 'SelectableButton'
                                data: [{'text': str(x)} for x in tableview.data_items]
                                SelectableRecycleGridLayout:
                                    cols: 11
                                    default_size: None, dp(50)
                                    default_size_hint: 1, None
                                    size_hint_y: None
                                    height: self.minimum_height
                                    orientation: 'vertical'
                                    spacing: 3,3
            TabbedPanelItem:
                text: "Filter"
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "Name"
                        TextInput:
                            id: name_input
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "Date"
                        TextInput:
                            id: date_input
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "Header"
                        TextInput:
                            id: header_input
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "Country"
                        TextInput:
                            id: country_input
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "User age group"
                        TextInput:
                            id: age_input
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "Review count"
                        TextInput:
                            id: count_input
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "Score"
                        TextInput:
                            id: score_input
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "Info Tags"
                        TextInput:
                            id: tags_input
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "Positive review"
                        TextInput:
                            id: preview_input
                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: "Negative review"
                        TextInput:
                            id: nreview_input
                    BoxLayout:
                        orientation: 'horizontal'
                        Button:
                            text: 'Apply'
                            on_release: tableview.get_data()
                            on_release: tableview.filter['name'] = name_input.text
                            on_release: tableview.filter['date'] = date_input.text
                            on_release: tableview.filter['header'] = header_input.text
                            on_release: tableview.filter['country'] = country_input.text
                            on_release: tableview.filter['info_tags'] = tags_input.text
                            on_release: tableview.filter['score'] = score_input.text
                            on_release: tableview.filter['user_age_group'] = age_input.text
                            on_release: tableview.filter['review_count'] = count_input.text
                            on_release: tableview.filter['neg_review'] = nreview_input.text
                            on_release: tableview.filter['pos_review'] = preview_input.text

                            on_release: tableview.filter['name'] = name_input.text
<ScrollView>:
    scroll_type: ['bars']
    bar_width: 10
    bar_color: (0,0,255, 1.0)
    bar_inactive_color: (0,0,200, 1.0)

<HotelButton>:
    size_hint_y: None
    height: 30

<ScrollLabel>:
    Label:
        text: root.text
        font_size: 11
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]

<SelectableButton>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size