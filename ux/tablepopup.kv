#: kivy 1.0
#: import TableView etl.TableView

Popup:
    title: "Database content"
    auto_dismiss: False
    on_open: dropdown.create_hotels_list()
    BoxLayout:

        orientation: "vertical"
        height:40

        # trick to not lost the Dropdown instance
        # Dropdown itself is not really made to be used in kv.
        __safe_id: [dropdown.__self__]

        Button:
            text: "Delete All"
            orientation: 'vertical'
            size_hint: (.2,.1)
            pos_hint: {'x': .4}
            on_release: tableview.delete_all_reviews()

        Button:
            text: "Close"
            orientation: 'vertical'
            size_hint: (.2,.1)
            pos_hint: {'x': .4}
            on_release: root.dismiss()
        Button:
            id: btn
            text: 'Hotels list'
            on_release: dropdown.open(self)
            size_hint: (.2,.1)
            pos_hint: {'x': .4}

        HotelsDropDown:
            id: dropdown
            on_select:tableview.get_reviews(args[1])


        Label:
            id: nolabel
            text: 'Number of reviews:' + tableview.row_number
            size_hint: (.2,.1)

        TableView:
            id: tableview
            BoxLayout:
                orientation: "vertical"
                GridLayout:
                    size_hint: 1, None
                    size_hint_y: None
                    height: 25
                    cols: 9

                    Label:
                        text: "Name"
                    Label:
                        text: "Date"
                    Label:
                        text: "Header"
                    Label:
                        text: "Country"
                    Label:
                        text: "User age group"
                    Label:
                        text: "Review count"
                    Label:
                        text: "Score"
                    Label:
                        text: "Positive review"
                    Label:
                        text: "Negative review"
                BoxLayout:
                    RecycleView:
                        viewclass: 'SelectableButton'
                        data: [{'text': str(x)} for x in tableview.data_items]
                        SelectableRecycleGridLayout:
                            cols: 9
                            default_size: None, dp(50)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
<ScrollView>:
    scroll_type: ['bars']
    bar_width: 10
    bar_color: (200,0,0, 1.0)
    bar_inactive_color: (50,0,0, 1.0)

<HotelButton>:
    size_hint_y: None
    height: 30

<ScrollLabel>:
    Label:
        text: root.text
        font_size: 11
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]

<SelectableButton>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size