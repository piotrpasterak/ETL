#: kivy 1.0
#: import TableView etl.TableView

Popup:
    title: "Database content"
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        height:25
        Button:
            text: "Delete All"
            orientation: 'vertical'
            size_hint: (.2,.1)
            pos_hint: {'x': .4}

        Button:
            text: "Close"
            orientation: 'vertical'
            size_hint: (.2,.1)
            pos_hint: {'x': .4}
            on_release: root.dismiss()

        TableView:
            BoxLayout:
                orientation: "vertical"

                GridLayout:
                    size_hint: 1, None
                    size_hint_y: None
                    height: 25
                    cols: 9

                    Label:
                        text: "Name"
                    Label:
                        text: "Date"
                    Label:
                        text: "Header"
                    Label:
                        text: "Country"
                    Label:
                        text: "User age group"
                    Label:
                        text: "Review count"
                    Label:
                        text: "Score"
                    Label:
                        text: "Positive review"
                    Label:
                        text: "Negative review"
                BoxLayout:
                    RecycleView:
                        viewclass: 'SelectableButton'
                        data: []
                        SelectableRecycleGridLayout:
                            cols: 9
                            default_size: None, dp(26)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'

<SelectableButton>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size